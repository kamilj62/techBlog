
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/blog/{{id}}">{{name}}</a>

    </h2>
    <p id="blog-name">
      Title:
      {{title}}
    </p>
  </div>
  <div class="col-md-7">
    <p id="blog">
      Blog:
      {{blog}}
      {{date_created}}
      {{user_id}}
    </p>
  </div>
</div>
<div>
  {{#each comments as |comment|}}
    <div style="border: 1px solid black; margin: 10px">
      <p>
       {{comment.comment_text}}
      </p>
      <p>
        {{comment.user.name}}
      </p>
    </div>
  {{/each}}
</div>

<form class="form comment-form">
      <div class="form-group">
        <label for="comment">Leave a Comment:</label>
        <textarea class="form-input" type="text" id="comment" ></textarea>
      </div>
      <input type="hidden" id="blog-id" value="{{id}}">
      <div class="form-group">
        <button class="btn btn-primary" type="submit">
          comment
        </button>
      </div>
      </div>
    </form>
{{#if owner}}
  <form class="form update-form">
      <div class="form-group">
        <label for="update">Update Post Title:</label>
        <textarea class="form-input" type="text" id="title" ></textarea>
      </div>

      <div class="form-group">
        <label for="update">Update Post Blog</label>
        <textarea class="form-input" type="text" id="blog" ></textarea>
      </div>
      
      <div class="form-group">
        <button class="btn btn-secondary" id="btn-update" type="submit">
          update
        </button>
      </div>
      </div>
    </form>
    
    
  </div>
{{/if}}
<script src="/js/comment.js"></script>