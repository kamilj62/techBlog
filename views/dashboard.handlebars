<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">Blog name:</label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" />
      </div>
      <div class="form-group">
        <label for="blog-title">blog title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group">
        <label for="blog">text:</label>
        <textarea class="form-input" id="blog" name="blog"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

{{#if blogs.length}}
  <div class="col-md-6 project-list">
    <h3>Current Blog:</h3>

    {{#each blog}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.name}}</a></h4>
      </div>
      <p>
        <strong>{{blog.title}}</strong>
      </p>
      <p>
        {{blog.blog}}
      </p>
      <div class="col-md-4 btn-delete">
        <button class="btn btn-sm btn-danger" type="delete" data-id="{{blog.id}}">DELETE</button>
      </div>
      <div class="col-md-4 btn-comment">
        <button class="btn btn-sm btn-secondary" type="submit" data-id="{{blog.id}}">COMMENT</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
<script src="./js/comment.js"></script>
